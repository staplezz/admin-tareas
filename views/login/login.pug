extends ../layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/login")
            #error
                if error
                    p.text-danger Error!!!
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
                h1(class=h1Classes) Bienvenido a Noteras
                h2(class=h1Classes) A continuación ingresa tus credenciales:
                //-input email
                label( for="inputEmail" class="sr-only") Email address
                input(type="email" name="email" id="inputEmail" class="form-control" placeholder="Correo electrónico" required autofocus)
                //-input password
                label(for="inputPassword" class="sr-only") Password
                input(type="password" name="password" id="inputPassword" 
            class="form-control" placeholder="Contraseña" required)
                //-signIn button
                - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
                button(class=buttonClass type="submit") Ingresar
                - var pClasses=['mt-5', 'mb-3', 'text-muted'];
                    p(class=pClasses) © 2021
